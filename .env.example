# OpenRouter API Configuration
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin SDK (Server-side)
FIREBASE_ADMIN_PROJECT_ID=your_project_id
FIREBASE_ADMIN_CLIENT_EMAIL=your_service_account_email
FIREBASE_ADMIN_PRIVATE_KEY=your_private_key

# Redis Configuration (Optional - for production rate limiting)
UPSTASH_REDIS_URL=rediss://default:password@host:port
UPSTASH_REDIS_TOKEN=your_redis_token

# GoCardless Payment Configuration
# Get these from https://developer.gocardless.com after creating your app
GOCARDLESS_ENVIRONMENT=sandbox

# Production credentials (for live payments)
GOCARDLESS_ACCESS_TOKEN=your_gocardless_live_access_token
GOCARDLESS_WEBHOOK_ENDPOINT_SECRET=your_gocardless_live_webhook_secret

# Sandbox credentials (for testing)
GOCARDLESS_SANDBOX_ACCESS_TOKEN=your_gocardless_sandbox_access_token
GOCARDLESS_SANDBOX_WEBHOOK_ENDPOINT_SECRET=your_gocardless_sandbox_webhook_secret

# Application Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security Secrets (Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
CRON_SECRET=your_cron_secret_here
ADMIN_SECRET=your_admin_secret_here
